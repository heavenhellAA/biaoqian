        function Check() {
            var cnbqywm = document.getElementById("cnbqywm").value;
            $.ajax({
                type: "GET",
                url: '../Datainself/Getdata',
                data: { scph: cnbqywm },
                dataType: "json",
                async: false,  //设置异步，必须先更改对应值才能做后续的传递参数操作
                success: function (data) {
                    //console.log(data.Tables[0].Rows[0]);
                    document.getElementById("khlh").value = addPregang(data.Tables[0].Rows[0].customer_goods_id, 18);
                    document.getElementById("sl").value = data.Tables[0].Rows[0].qty;
                    document.getElementById("zq").value = data.Tables[0].Rows[0].dc;
                    document.getElementById("scrq").value = new Date().format("yyyy-MM-dd").replace('-', '').replace('-', '');
                },
                error: function (res) {
                    console.log(res);
                    layer.msg('查询出错或者无数据！', { icon: 0 });
                }
            });
        }
        ////流水号
        function lsnum() {
            $.ajax({
                type: "GET",
                url: '../NewLvyuan/Getlsnum',
