                                $("#onecode").barcode(YWM, 'code128', { barWidth: 1, barHeight: 50, fontSize: 6, showHRI: false });
                                onecode_msg
                                $("#onecode_msg").html(YWM);
                                printData1 += document.getElementById("PrintArea").innerHTML;
